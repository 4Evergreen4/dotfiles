{
    "languageserver": {
        "haskell": {
            "command": "hie-wrapper",
            "rootPatterns": [
                ".stack.yaml",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {
                    "hlintOn": true
                }
            }
        },
        "nim": {
            "command": "nimlsp",
            "filetypes": ["nim"]
        }
    },
    "java.errors.incompleteClasspath.severity": "ignore"
}
