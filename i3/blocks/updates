#!/usr/bin/env bash
if command -v pacman >/dev/null; then
    UPDATES="$(checkupdates | wc -l)"
    [[ ! $UPDATES = "0" ]] && TEXT="$UPDATES"
    if command -v yaourt >/dev/null; then
        AUR="$(yaourt -Qquam | wc -l)"
        [[ ! $AUR = "0" ]] && TEXT="$TEXT ïƒ€ $AUR"
    fi
fi


echo "$TEXT"
echo "$TEXT"
exit 0
